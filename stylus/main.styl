// -----------------------------------
// EXTERNAL LIBARYRIES
@import 'typographic'
@import 'nib'


// ------------------------------------
//  VARIABLES
ff = 'Raleway', sans-serif
fw-l = 300
fw-n = 400
fw-b = 700
fw-xb = 900
$white = #ffffff
$accent = #00ff6c
$grey = #dddddd
$dark = #232323
// --------------------------------------------
// MIXINS
flex($jc= flex-start, $ai= stretch)
    display flex
    justify-content $jc
    align-items $ai
// --------------------------------------------
// GENERAL STYLE
*
*::before
*::after
    padding 0
    margin 0
    box-sizing border-box
html
    height 100%
    font-size 50%
    @media(min-width: 37.5em)
        font-size 62.5%
body 
    font-family ff
    text-transform capitalize
    text-align center
img
    max-width 100%
    height auto
a
    text-decoration none
ul
ol
li
    list-style none

.parallax--bg
    backface-visibility hidden
    

// --------------------------------------------------
// BUTTONS
.btn
    font-size 2.5rem
    text-transform uppercase
    padding .5em 1em
    border-width 2px
    border-style solid
    margin-top 2rem
    display inline-block
    @media(min-width: 37.5em)
        margin-top 4rem
    &--accent
        color $accent
        border-color $accent
        transition-property background-color, color
        transition-duration 300ms
        &:hover
        &:focus
            background-color $accent
            color $dark
    &--black
        color $dark
        border-color $dark
        transition-property background-color, color
        transition-duration 300ms
        &:hover
        &:focus
            background-color $dark
            color $accent
    &--small
        font-size 1.5rem

// --------------------------------------------------
//  HEADER STYLE
.header
    padding 2rem
    absolute left right
    @media(min-width: 37.5em)
        flex(space-between, center)
    &__nav
        margin-top 2rem
    .nav
        flex(center, center)
        &__list
            flex(flex-start, center)
        &__item
            &:not(:last-child)
                margin-right 2rem
        &__link
            font-weight fw-xb
            text-decoration uppercase
            font-size 2rem
            padding 1rem
            color $white
            &:hover
            &:focus
                color $grey
// ----------------------------------------------
// HOME SECTION
.home
    background-image url('../images/hero-bg.jpg')
    background-size cover
    background-position center
    padding 15rem 2rem 5rem
    flex(space-between, center)
    flex-direction column
    @media(min-width 37.5em)
        min-height 120vh
        flex(flex-start, center)
        padding-top 40vh
    &__title
        font-size 3rem
        font-weight fw-n
        color $white
        text-align center
        @media(min-width 37.5em)
            text-align left
        span
            display block
            font-weight fw-l
            font-size 0.75em
            color darken($white, 10%)
// -----------------------------------------------
// ABOUT SECTION
.about
    background-color $white
    padding 2rem
    height 100vh
    flex(flex-start, center)
    flex-direction column
    &__img
        background-image url('../images/who-we-are.jpg')
        background-size cover
        background-position center center
        width 80%
        text-align center
        margin 0 auto
        height 100%
    @media(min-width 50em)
        position relative       
        padding 0 4rem
    &__text-box
        padding 4rem
        color $white
        position relative
        background-color $dark
        outline 1px solid $accent
        outline-offset -2.5rem
        margin-bottom 2rem
        width 100%
        @media(min-width 50em)
            width 40%
            absolute top -25% left 2%
            background-color $dark
            transform translateY(25%)
    &__title
        font-size 2.5rem
        font-weight fw-b
        absolute left 50% top -1rem
        transform translateX(-50%)
        background-color $dark
        z-index 10
        padding 0 1rem
        color $accent
        @media(min-width 50em)
            top 0rem
            padding-top 0.5rem
    &__detail
        font-size 1.8rem
        font-weight fw-l
        padding-top 4rem
//-------------------------------------------------
// PORTFOLIO SECTION
.portfolio
    display grid
    grid-gap 0
    padding 2rem 0 0
    @media(min-width 37.5em)
        grid-template-rows 1fr repeat(3, 2fr)
        grid-template-columns repeat(2, 1fr)
    @media(min-width 50em)
        grid-template-rows 1fr repeat(2, 2fr)
        grid-template-columns repeat(3, 1fr)
    &__title
        font-size 2.5rem
        font-weight fw-b
        color $dark
        margin-bottom 2rem
    &__figure
        margin 0
        border-radius 3px
        position relative
        overflow hidden
        &:hover
            cursor pointer
            .portfolio__desc
                transform scaleY(1)
        img
            max-width 100%
            min-height 100%

    &__title
        grid-row 1 / 2
        grid-column 1 / -1
        font-size 2.5rem
        font-weight fw-b
    &__desc
        absolute bottom left
        margin 0
        height 100%
        width 100%
        background-color rgba($dark, .5)
        color $white
        flex(space-between, center)
        flex-direction column
        padding 2rem 0
        transform scaleY(0)
        transform-origin bottom left
        transition transform 300ms
        h3
            font-size 2rem
        @media(min-width 37.5em)
            height 75%
// -------------------------------------------------------
// CALL TO ACTION SECTION 'CTA'
.cta
    padding 4rem 0
    background-color $accent
    color $white
    flex(center, center)
    flex-direction column
    &__title
        font-size 2.5rem
        font-weight fw-xb
        text-align left
        span
            display block
            font-size .85em
            font-weight fw-l
            color darken($white, 10%)

// -----------------------------------------------
// FOOTER
.footer
    background-color $dark
    color $white
    padding 2rem
    @media(min-width 37.5em)
        display grid
        padding 15rem 2rem
        grid-template-rows repeat(2, 1fr)
        grid-template-columns repeat(3, 1fr)
    @media(min-width 50em)
        padding 15rem 2rem
        display grid
        grid-template-rows 1fr
        grid-template-columns 2fr repeat(3, 1fr)
   flex(flex-start, center)
   flex-direction column
p.footer__text
    font-size 2.5rem
    text-align left
    margin-bottom 2rem
    @media(min-width 37.5em)
        grid-row 1 / 2
        grid-column 1 / -1
    @media(min-width 50em)
        grid-column 1 / 2

ul.footer__links
    margin-top 2rem
    &--1
        margin-bottom 2rem
    &--2
        margin-bottom 2rem
    @media(min-width 50em)
        margin-top 0
        &--1
            grid-column 2 / 3
        &--2
            grid-column 3 / 4
        &--3
            grid-column 4 / 5

.footer ul li
    font-size 2.5rem
    &:hover
        cursor pointer


        
